
package Group_Project;

public class Item {
    
    public int ID;
    public String itemName;
    public double weight;
    public String description;
    private double pricePaid;
    public double forSalePrice;
    public Vendor vendorName;
    
public Item()
{
    this.itemName = "noName";
    this.weight = 0.0;
    this.description = "noDescription";
    this.pricePaid = 0.0;
    this.forSalePrice = 0.0;
}

public Item(int ID, String userItemName, double userWeight, String userDescription, double userPrice, double userForSalePrice)
{
    this.ID = ID;
    this.itemName = userItemName;
    this.weight = userWeight;
    this.description = userDescription;
    this.pricePaid = userPrice;
    this.forSalePrice = userForSalePrice;
}

public double getPrice()
{
    return pricePaid;
}

public boolean setPrice (double newPrice)
{
    if (newPrice > 0)
    {
        pricePaid = newPrice;
        return true;
    }
    else 
        return false;
}
public String toString()
{
    String output = "\t" + ID + "\t" + this.itemName;
    return output;
}
}


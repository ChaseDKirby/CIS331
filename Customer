package Group_Project;

import java.util.*;
import javafx.scene.control.ComboBox;
import javafx.scene.control.TextField;
// Data Fields
public class Customer {
    
   public String ID; 
   public String firstName;
   public String lastName;
   public String address;
   public String phoneNumber;
   private String email;
   public static int customerQuantity = 0;
   public static int number;
   
// Default Constructor
public Customer()
{
    this.number++;
    this.ID = "Customer_" + this.number;
    this.firstName = "noName";
    this.lastName = "lastName";
    this.address = "noAddress";
    this.phoneNumber = "noNumber";
    this.email = "noEmail";
    customerQuantity++;
    this.number++;
}
// Full parameter constructor 
public Customer(String firstName1, String lastName1, String address1, String phoneNumber1, String email1)
{   
    this.number++;
    this.ID = "Customer_" + this.number;
    this.firstName = firstName1;
    this.lastName = lastName1;
    this.address = address1;
    this.phoneNumber = phoneNumber1;
    this.email = email1;
    customerQuantity++;
    
}
// Gets the email to display for printing
public String getEmail()
{
    return email;
}
// Displays Information for Editing a Customer
public String toString()
{
    String output = this.ID + "\t" + this.firstName + "\t" + this.lastName; //+ " " + this.address + " " + this.phoneNumber + " " + getEmail();
    return output;
}
// Sets a new email when editing the Customer
public String setEmail(String newEmail)
{
    if (newEmail.length() > 0)
    {
        email = newEmail;
        return email;
    }
    else 
        return "Please enter a valid email";
}
public boolean setFirstName(String newFirstName)
{
    if (newFirstName.length() > 0)
    {
        firstName = newFirstName;
        return true;
    }
    else
        return false;
}
public boolean setLastName(String newLastName)
{
    if (newLastName.length() > 0)
    {
        lastName = newLastName;
        return true;
    }
    else
        return false;
}
public String setPhoneNumber(String newPhoneNumber)
{
    if (newPhoneNumber.length() == 10)
    {
        phoneNumber = newPhoneNumber;
        return phoneNumber;
    }
    else
        return "Please Enter a Valid Phone Number";
}
public String setAddress(String newAddress)
{
    this.address = newAddress;
    return address;
}

public String getID()
{
    return ID;
}
public static void EditCustomer(TextField txtEditCustomerFirstName,TextField txtEditCustomerLastName, TextField txtEditAddress,
            TextField txtEditCustomerPhoneNumber,TextField txtEditCustomerEmail, ArrayList<Customer> customerArray, ComboBox cmboCustomerOptions)
    {
        for (int i = 0; i < customerArray.size(); i++)
        {
            if (cmboCustomerOptions.getSelectionModel().getSelectedIndex() == i);
            {
                String firstName = txtEditCustomerFirstName.getText(); 
                customerArray.get(i).firstName = firstName;
                txtEditCustomerFirstName.clear();
                
                String lastName = txtEditCustomerLastName.getText();
                customerArray.get(i).lastName = lastName;
                txtEditCustomerLastName.getText();
                
                String address = txtEditAddress.getText();
                customerArray.get(i).address = address;
                txtEditAddress.clear();
                
                String phoneNumber = txtEditCustomerPhoneNumber.getText();
                customerArray.get(i).phoneNumber = phoneNumber;
                txtEditCustomerPhoneNumber.clear();
                
                String email = txtEditCustomerEmail.getText();
                customerArray.get(i).email = email;
                txtEditCustomerEmail.clear();
            }
        }
    }
}

package Group_Project;


public class Sale {
    
    public int ID;
    public Item itemSold;
    public int purchaseQuantity;
    public Item quantity;
    public String date;
    public Customer customer;
    public static int saleQuantity = 0;
    
    


public Sale(int ID, Item userItem, int userQuantity, String userDate, Customer userCustomer)
{
    this.ID = ID;
    this.itemSold = userItem;
    this.purchaseQuantity = userQuantity;
    this.date = userDate;
    this.customer = userCustomer;
    saleQuantity++;

}
public String describeSale()
{
    String output;
    output = "Item Sold: " + itemSold.itemName + ", Price: $" + itemSold.getPrice() + ", Quantity: " + purchaseQuantity + ", Sale Total: $" + (purchaseQuantity * itemSold.getPrice());
    return output;
}
public String toString()
{
    String output;
    output = "\t" + ID + "\t" + itemSold.itemName + " \t" + customer.firstName + " " + customer.lastName;
    return output;
}
public String printPurchaseHistoryItem(Item itemSold){
    String output;
    output = "Name: " + customer.firstName + " " + customer.lastName + "\tDate: "
            + date + "\tQuantity: " + purchaseQuantity;
    return output;
}
public String CustomerPurchaseHistory(Customer customer)
{
    String output;
    output = "Name: " + itemSold.itemName + "\tQuantity: " + purchaseQuantity + "\t\tPurchase Cost: $" + (purchaseQuantity * itemSold.getPrice()) + "\tDate: " + date;
    return output;
}
}
